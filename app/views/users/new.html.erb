<% content_for :css do %>
  <%= stylesheet_link_tag 'sessions' %>
<% end %>

<div class="form-wrapper">
  <h1>Sign Up</h1>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-item">
      <label for="ユーザー名"></label>
      <%# <input type="email" name="email" required="required" placeholder="Email Address"></input> %>
      <%= form.text_field :user_name, :placeholder => "ユーザー名" %>
    </div>
    <div class="form-item">
      <label for="パスワード"></label>
      <%# <input type="password" name="password" required="required" placeholder="Password"></input> %>
      <%= form.password_field :password, :placeholder => "パスワード" %>
    </div>
    <div class="form-item">
      <label for="パスワード確認"></label>
      <%# <input type="password" name="password" required="required" placeholder="Password"></input> %>
      <%= form.password_field :password_confirmation, :placeholder => "パスワード確認" %>
    </div>
    <div class="button-panel">
      <%# <input type="submit" class="button" title="Sign In" value="Sign In"></input> %>
      <%= form.submit("登録", class: 'button') %>
    </div>
  <% end %>
  <div class="form-footer">
    <p><%= link_to 'Sign In', login_path %></p>
  </div>
</div>
