<%= form_with(model: tag, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :タグ名, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :tag_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :備考, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :remark, rows: 5, class: 'form-control' %>
    </div>
  </div>

  <div class="actions center">
    <%= form.submit(tag.id == nil ? "追加" : "更新", class: 'btn btn-primary') %>
    <%= link_to 'クリア', tags_path, { class: "btn btn-danger" } if tag.id != nil %>
  </div>
<% end %>
