<p id="notice"><%= notice %></p>

<h1 class="pageTitle">タグ（一覧）</h1>

<table class="table">
  <thead>
    <tr>
      <th>タグ名</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.tag_name %></td>
        <td>
          <%= link_to '詳細', tag, { class: "btn btn-primary" } %>
          <%= link_to '編集', edit_tag_path(tag), { class: "btn btn-success" } %>
          <%= link_to '削除', tag, method: :delete, data: { confirm: '削除しても大丈夫ですか?' }, class: "btn btn-danger"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tags %>

<%= link_to 'タグ追加', new_tag_path, { class: "btn btn-primary" } %>
