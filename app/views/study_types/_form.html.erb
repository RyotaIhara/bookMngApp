<%= form_with(model: study_type, local: true) do |form| %>
  <% if study_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(study_type.errors.count, "error") %> prohibited this study_type from being saved:</h2>

      <ul>
        <% study_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :タイプ名, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :type_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :備考, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :remark, rows: 5, class: 'form-control' %>
    </div>
  </div>

  <div class="actions center">
    <%= form.submit(study_type.id == nil ? "追加" : "更新", class: 'btn btn-primary') %>
    <%= link_to 'クリア', study_types_path, { class: "btn btn-danger" } if study_type.id != nil %>
  </div>
<% end %>
