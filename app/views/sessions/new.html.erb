<% content_for :css do %>
  <%= stylesheet_link_tag 'sessions' %>
<% end %>

<div class="form-body">

  <div class="form-wrapper">
    <h1>Sign In</h1>
    <% if @errors.present? %>
      <div class="alert alert-danger">
        <ul class="list-unstyled">
          <% @errors.each do |e| %>
            <li><%= e %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, local: true) do |form| %>
      <div class="form-item">
        <label for="ユーザー名"></label>
        <%= form.text_field :user_name, :placeholder => "ユーザー名" %>
      </div>
      <div class="form-item">
        <label for="パスワード"></label>
        <%= form.password_field :password, :placeholder => "パスワード" %>
      </div>
      <div class="button-panel">
        <%= form.submit("ログイン", class: 'button') %>
      </div>
    <% end %>
    <div class="form-footer">
      <p><%= link_to 'Sign Up', new_user_path %></p>
      <p><%= link_to 'Forgot password?', user_confirm_name_path %></p>
    </div>
  </div>

</div>
